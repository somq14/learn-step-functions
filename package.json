{
  "name": "learn-step-functions",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "start": "tsc --watch",
    "prepare": "husky install",
    "lint": "run-s lint:*",
    "lint:prettier": "prettier --check **/*.{json,js,jsx,ts,tsx,md,yaml,html}",
    "lint:eslint": "eslint --max-warnings 0 **/*.{js,jsx,ts,tsx}",
    "lint:tsc": "tsc --noEmit",
    "lint-fix": "run-s lint-fix:*",
    "lint-fix:prettier": "prettier --write **/*.{json,js,jsx,ts,tsx,md,yaml,html}",
    "lint-fix:eslint": "eslint --fix **/*.{js,jsx,ts,tsx}",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.6",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-sort-export-all": "^1.1.1",
    "husky": "^7.0.0",
    "jest": "^27.1.0",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "4.3.x"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier",
      "eslint --max-warnings 0"
    ],
    "*.{json,md,yaml,html}": [
      "prettier"
    ]
  }
}
